{% set app_title = 'Lucas Padilha - Web Developer' %}

{% block structure %}

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{{ app_title }}</title>

        {{ assets({ files: ['vendor/fontawesome/css/all.min.css', 'vendor/bulma/css/bulma.min.css', 'assets/css/main.css'] }) }}
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

        {% block aditional_css %}{% endblock %}
    </head>
    <body id="{{ body_id is defined ? body_id : 'body' }}" class="{{ body_class is defined ? body_class : '' }}">
        {% block body %}{% endblock %}

        {{ assets({ files: ['assets/js/main.js'] }) }}
        {% block aditional_js %}{% endblock %}
    </body>
    </html>

{% endblock %}