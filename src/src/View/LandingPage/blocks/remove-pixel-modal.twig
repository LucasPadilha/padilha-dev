{% block delete_pixel_modal %}
    <!-- Delete pixel Modal-->
    <div class="modal fade" id="deletePixelModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">{{ trans('general.delete_heading') }}</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">{{ trans('general.delete_message') }}</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">{{ trans('general.cancel') }}</button>
                    <button id="deletePixelModalBtn" onClick="deletePixelFunction(this)" data-landing-page-id="" data-pixel-id="" class="btn btn-primary" href="#">{{ trans('general.confirm') }}</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function setupDeletePixelModal(landing_page_id, pixel_id) {
            const btn = $('#deletePixelModalBtn');
            btn.data('landing-page-id', landing_page_id).data('pixel-id', pixel_id);

            return true;
        }

        function deletePixelFunction(el) {
            const btn = $(el);
            const tr = $('#table-pixel').find('tr[data-pixel-id="'+ btn.data('pixel-id') +'"]');

            tr.find('i.fas').removeClass('fa-trash').addClass('fa-cog').addClass('fa-spin');

            $.ajax({
                method: 'DELETE',
                url: "{{ url_for('ajax.landing_page_pixel_remove') }}",
                data: { landing_page_id: btn.data('landing-page-id'), pixel_id: btn.data('pixel-id') },
                dataType: 'json'
            }).done(function(json) {
                if (json.data.success) {
                    tr.remove();

                    $('#deletePixelModal').modal('hide');
                }
            });
        }
    </script>
{% endblock %}