{% block delete_content_modal %}
    <!-- Delete content Modal-->
    <div class="modal fade" id="deleteContentModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">{{ trans('general.delete_heading') }}</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">{{ trans('general.delete_message') }}</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">{{ trans('general.cancel') }}</button>
                    <button id="deleteContentModalBtn" onClick="deleteContentFunction(this)" data-landing-page-section-id="" data-content-id="" class="btn btn-primary" href="#">{{ trans('general.confirm') }}</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function setupDeleteContentModal(landing_page_section_id, content_id) {
            const btn = $('#deleteContentModalBtn');
            btn.data('landing-page-section-id', landing_page_section_id).data('content-id', content_id);

            return true;
        }

        function deleteContentFunction(el) {
            const btn = $(el);
            const tr = $('#table-content').find('tr[data-content-id="'+ btn.data('content-id') +'"]');

            tr.find('i.fas').removeClass('fa-trash').addClass('fa-cog').addClass('fa-spin');

            $.ajax({
                method: 'DELETE',
                url: "{{ url_for('ajax.landing_page_section_content_remove') }}",
                data: { landing_page_section_id: btn.data('landing-page-section-id'), content_id: btn.data('content-id') },
                dataType: 'json'
            }).done(function(json) {
                if (json.data.success) {
                    tr.remove();

                    $('#deleteContentModal').modal('hide');
                }
            });
        }
    </script>
{% endblock %}