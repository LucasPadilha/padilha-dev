{% extends 'Base/index.twig' %}

{% set body_class = 'bg-gradient-primary' %}

{% block body %}

    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">{{ trans('pages.login.greeting_text') }}</h1>
                                    </div>

                                    {% include 'Base/blocks/alerts.twig' %}

                                    <form class="user" method="post" action="{{ url_for('login') }}" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <input type="email" name="email" class="form-control form-control-user" id="emailInput" aria-describedby="emailHelp" placeholder="{{ trans('pages.login.form.email_placeholder') }}" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="password" class="form-control form-control-user" id="passwordInput" placeholder="{{ trans('pages.login.form.password_placeholder') }}" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            {{ trans('pages.login.form.button_text') }}
                                        </button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">{{ trans('pages.login.form.forgot_password') }}</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="register.html">{{ trans('pages.login.form.create_account') }}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}